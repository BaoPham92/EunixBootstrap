<!DOCTYPE html>
<html>
  <head>
    <title>Eunix30</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

  <div class="nav nav-tabs", style="background-color: white; opacity: 0.9;">
    <div>
      <div class="navbar-header">
        <%= link_to "Eunix 3.0", root_path, class: "navbar-brand" %>
      </div>

      <ul class="nav nav-tabs">
        <li role="presentation"><%= link_to "Sign Up", new_user_registration_path %></li>

        <% if user_signed_in? %>
          <li role="presentation"><%= link_to "Sign Out", destroy_user_session_path, method: :delete, data: { confirm: "Signing out will close all sessions, including material for the site."} %></li>
          <% else %>
            <li role="presentation"><%= link_to "Sign In", new_user_session_path %></li> 
        <% end %>
      </ul>

    </div>
  </div>

    <div class="imgScroll"></div>

	   
		<!-- Flash -->
       <p class="notice"><%= notice %></p>
       <p class="alert"><%= alert %></p>

    <%= yield %>
  </body>
</html>
